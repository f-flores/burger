<h1 class="d-flex display-4 justify-content-center">Hamburger Menu</h1>
<img class="img-fluid img-center" src="./assets/img/hamburger-1294647_960_720.png" alt="Hamburger Source: https://pixabay.com/en/hamburger-food-fast-food-snack-1294647/">

<div class="row">
  <h2 class="col-xs-12 col-sm-6 d-flex display-5 justify-content-center">Available</h2>
  <h2 class="col-xs-12 col-sm-6 d-flex display-5 justify-content-center">Devoured</h2>
</div>

<div class="row mb-2">
  <table class="col-xs-12 col-sm-5 burger-list mb-1">
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
  </table>


  <table class="col-xs-12 offset-sm-2 col-sm-5 burger-list mb-1">
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/if}}
    {{/each}}
  </table>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="burger-devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> Available
  </div>

  <div class="form-group">
    <select class="opt-selected">
      <option class="placeholder-option" selected="selected" value="placeholder" disabled selected>Select from burger list</option>
      {{#each burgerOptions}}
        <option value={{burgerType}}><strong>{{burgerType}}</strong></option>
      {{/each}}
    </select>
  </div>

  <button type="submit">Add Burger</button>
</form>


